extends layout

block content
  .container
    .row.page-header
      .col-lg-12
        h2 Add Faculty
    .row
      .col-xs-12.col-md-6
        form.form-horizontal(action="", method="post", role="form")
          .form-group
            label.col-xs-10.col-sm-4.control-label(for="name") Faculty code
            .col-xs-12.col-sm-8
              input#faculty_code.form-control(name="faculty_code" value=(undefined===faculty ? '' : faculty.faculty_code) placeholder="Faculty code")
          .form-group
            label.col-xs-10.col-sm-4.control-label(for="address") Faculty name
            .col-xs-12.col-sm-8
              input#faculty_name.form-control(name="faculty_name" value=(undefined===faculty ? '' : faculty.faculty_name) placeholder="Faculty name")

          button.btn.btn-primary(type='submit') Add